{
  "name": "frovo-rbac-backend",
  "version": "1.0.0",
  "description": "RBAC (Role-Based Access Control) system backend for Frovo",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "render-start": "node --max-old-space-size=4096 dist/server.js",
    "seed": "SEED_DATABASE=true ts-node src/server.ts",
    "seed:permissions": "ts-node src/seeders/permissions.seeder.ts",
    "seed:all": "ts-node src/seeders/index.ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\"",
    "format:fix": "prettier --write \"src/**/*.{ts,js,json}\"",
    "lint:check": "eslint \"src/**/*.{ts,js}\"",
    "lint:fix": "eslint \"src/**/*.{ts,js}\" --fix",
    "clean:console": "node scripts/remove-console.js",
    "clean:comments": "node scripts/remove-comments.js",
    "prepare": "husky"
  },
  "keywords": [
    "rbac",
    "nodejs",
    "express",
    "mongodb",
    "typescript"
  ],
  "author": "Frovo",
  "license": "ISC",
  "dependencies": {
    "@types/nodemailer": "^7.0.2",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^2.8.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-async-handler": "^1.2.0",
    "express-rate-limit": "^7.5.1",
    "express-validator": "^7.0.1",
    "helmet": "^7.2.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.20.0",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.10",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.10.1",
    "@eslint/js": "^9.0.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "typescript-eslint": "^8.0.0",
    "eslint-plugin-prettier": "^5.2.0",
    "husky": "^9.1.0",
    "lint-staged": "^15.2.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.3.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "src/**/*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "src/**/*.json": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
